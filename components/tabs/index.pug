mixin tabs(data)
	-
		const defaultData = {
			items: [
				{
					title: 'Some title',
					text: 'Some text'
				}
			]
		}
		
		data = Object.assign(defaultData, data);

		const { items } = data

	div(block="tabs")&attributes(attributes)
		ul(elem="menu")
			each item, i in items
				li.js-tab-menu-item(elem="menu-item" class=(i === 0 ? 'tabs__menu-item_active' : '') data-tab-item=i + 1) #{item.title}
		ul(elem="tabs-list")
			each item, i in items
				li.js-tab-item(elem="tab-item" class=(i !== 0 ? 'tabs__tab-item_hidden' : '') data-tab-item=i + 1) !{item.text}

